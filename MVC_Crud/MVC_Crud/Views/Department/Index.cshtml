@using MVC_Crud.Models
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" href="/Department/Save">Ekle</a>
<h2>Departmanlar Listesi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Adı</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
        <tr>
            <td>@department.Id</td>
            <td>@department.Name</td>
            <td><a class="btn btn-primary" href="/Department/Update/@department.Id">Güncelle</a></td>
            <td><a class="btn btn-primary" href="/Department/Delete/@department.Id">Sil</a></td>
        </tr>
        }
    </tbody>
</table>

